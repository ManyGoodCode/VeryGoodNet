@using CleanArchitecture.Blazor.Application.Features.Visitors.DTOs
@inherits MudComponentBase
@inject IStringLocalizer<Visitors> L
<MudDialog>
    <DialogContent>
        <MudContainer Style="overflow-x: scroll">
              <MudPaper Class="d-flex flex-grow-1 gap-5 my-3"  Width="725px"  Elevation="0">
            @if (HealthCode is not null)
            {
                <MudCard Style="width:215px">
                    <MudCardMedia Image="@HealthCode" Height="390" />
                    <MudCardContent>
                       <MudText Typo="Typo.body2">@L["Health Code"]</MudText>
                    </MudCardContent>
                </MudCard>
            }
            @if (TripCode is not null)
            {
                <MudCard Style="width:215px">
                    <MudCardMedia Image="@TripCode" Height="390" />
                    <MudCardContent>
                       <MudText Typo="Typo.body2">@L["Trip Code"]</MudText>
                    </MudCardContent>
                </MudCard>
            }
            @if (NucleicAcidTestReport is not null)
            {
                <MudCard Style="width:215px">
                    <MudCardMedia Image="@NucleicAcidTestReport" Height="390" />
                    <MudCardContent>
                       <MudText Typo="Typo.body2">@L["Nucleic Acid Test Report"]</MudText>
                    </MudCardContent>
                </MudCard>
            }
        </MudPaper>
        </MudContainer>
      
    </DialogContent>
    <DialogActions>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit">@L["OK"]</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter]
    public string? TripCode { get; set; }
    [Parameter]
    public string? HealthCode { get; set; }
    [Parameter]
    public string? NucleicAcidTestReport { get; set; }     
    private void Submit()
    {
        MudDialog.Close();
    }
}
