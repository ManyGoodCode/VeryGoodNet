@using WebApplication2.ViewModel;
@model DocumentListView
@{

    ViewBag.Title = "文档列表";
}

<div id="grid"></div>

<script type="text/javascript">
    $(function () {
        var grid = $("#grid").kendoGrid({
            dataSource: {
                transport: {
                    dataType: "json",
                    read: "/PageView/GetDocumentJson"
                },
                pageSize: 10,
            },
            pageable: {
                refresh: true,
                pageSizes: true,
                buttonCount: 5
            },
            columns: [{
                field: "ID",
                title: "序号",
                width: 200
            }, {
                field: "Title",
                title: "标题"
            }, {
                field: "Content",
                title: "内容"
            }]
        });
    });
</script>

<ul>
    @foreach (WebApplication2.Models.Document doc in Model.Docs)
    {
        <li>@Html.ActionLink(doc.Title, "Get", new { id = doc.ID })</li>
    }
</ul>
<p>显示当前第 @Model.CurrentPage 页，共有 @Model.PageCount 页 （记录总数:@Model.Count）。</p>